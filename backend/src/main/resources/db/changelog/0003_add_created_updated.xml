<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="createUpdateAndCreatedAtColumn" author="adros">
		<preConditions onFail="MARK_RAN" onError="HALT">
			<not>
				<columnExists tableName="events" columnName="created_at"/>
				<columnExists tableName="events" columnName="updated_at"/>
			</not>
		</preConditions>
		<addColumn tableName="events">
			<column name="created_at" type="NUMERIC"><constraints nullable="false"/></column>
			<column name="updated_at" type="NUMERIC"><constraints nullable="false"/></column>
		</addColumn>
	</changeSet>
</databaseChangeLog>
